Import("env")

scriptarray = env.Object("scriptarray", "#plugin/ASAddon/scriptarray.cpp")
if ARGUMENTS.get("shared_plugins", "0") == "1":
	env.SharedLibrary("#release/lib/git2nvgt", ["git.cpp", scriptarray], LIBS = ["git2"])
static = env.Object("git_static", "git.cpp", CPPDEFINES = [("NVGT_PLUGIN_STATIC", "git2nvgt")])
static = env.StaticLibrary("#lib/git2nvgt", [static], LIBS = ["git2"])
Return("static")
